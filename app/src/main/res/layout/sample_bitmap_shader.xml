<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.zmj.kotlinmall.learnUI.learnUI_2.TestBitmapShader
                android:layout_width="66dp"
                android:layout_height="66dp"/>
        <com.zmj.kotlinmall.learnUI.learnUI_2.TestBitmapShader
                android:layout_width="wrap_content"
                android:layout_height="280dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.zmj.kotlinmall.learnUI.learnUI_2.TestComposerShader
                    android:layout_width="66dp"
                    android:layout_height="66dp"/>
            <com.zmj.kotlinmall.learnUI.learnUI_2.TestShadowLayer
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <com.zmj.kotlinmall.learnUI.learnUI_2.TestMaskFilter
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <com.zmj.kotlinmall.learnUI.learnUI_2.TestEmbossMaskFliter
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>